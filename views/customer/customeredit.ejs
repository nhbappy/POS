<!DOCTYPE html>
<html>
<head>
  <title>Customer Edit</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/x.css">
</head>
<body>
    <div class="navbar navbar-fixed-top navbar-default" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/home">Point Of Sale</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">

                </ul>
            </div>
            <!-- /.nav-collapse -->
        </div>
        <!-- /.container -->
    </div>
    <!-- /.navbar -->

    <div class="container-fluid">
        <div class="row row-offcanvas row-offcanvas-left">
            <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
                <div class="sidebar-nav">
                    <ul class="nav">
                        <ul class="nav">
                        <li class="active"><a href="/customerlist">Customers</a></li>
                        <li><a href="/itemlist">Items</a></li>
                        <li><a href="/sales">Sales</a></li>
                        <li class="nav-divider"></li>
                        <li><a href="/invoicelist">Invoices</a></li>
                        <li><a href="/additem">Add Item</a></li>
                        <li><a href="/addcustomer">Add Customer</a></li>
                        <li class="nav-divider"></li>
                        <li class="active"><a href="#"></a></li>
                        <li class="active"><a href="#"></a></li>
                        <li class="active"><a href="#"></a></li>
                        <li class="nav-divider"></li>
                        <li><a href="#"></a></li>
                        <li class="active"><a href="#"></a></li>
                        <li class="active"><a href="#"></a></li>
                        <li><a href="/logout">Logout</a></li>
                        </ul>
                    </ul>
                </div>
                <!--/.well -->
            </div>
            <!--/span-->

            <div class="col-xs-12 col-sm-9">
                <br>
                <div class="jumbotron">
                    <form method="post"
                     ref = 'uploadForm'
                     id = 'uploadForm'
                     encType="multipart/form-data">
                        <ul>
                        <% errors.forEach(function(err){ %>
                        <li><%= err.msg %></li>
                        <% }) %>
                        </ul>

                        <input type="hidden" value="<%= customer.personId%>" name="personId">

                        <div class="form-group">
                          <label for="usr">First Name:</label>
                          <input type="text" class="form-control" value="<%= customer.firstName%>"  name="firstName">
                        </div>

                        <div class="form-group">
                          <label for="usr">Last Name:</label>
                          <input type="text" class="form-control" value="<%= customer.lastName%>"  name="lastName">
                        </div>

                        <div class="form-group">
                          <label for="usr">Email:</label>
                          <input type="text" class="form-control" value="<%= customer.email%>"  name="email">
                        </div>

                        <div class="form-group">
                          <label for="usr">Phone Number:</label>
                          <input type="text" class="form-control" value="<%= customer.phone %>"  name="phone">
                        </div>

                        <div class="form-group">
                          <label for="usr">Image:</label>
                          <img src="http://localhost:880/<%= customer.image %>" alt="Profile Image" height="40" width="40">
                          <br>
                          <a href="/changecustomerimage/<%= customer.personId%>">Change Image </a>
                        </div>

                        <div class="form-group">
                          <label for="usr">Address:</label>
                          <input type="text" class="form-control" value="<%= customer.address%>"  name="address">
                        </div>

                        <div class="form-group">
                          <label for="usr">City:</label>
                          <input type="text" class="form-control" value="<%= customer.city%>"  name="city">
                        </div>

                        <div class="form-group">
                          <label for="usr">State:</label>
                          <input type="text" class="form-control" value="<%= customer.state%>"  name="state">
                        </div>

                        <div class="form-group">
                          <label for="usr">Zip:</label>
                          <input type="text" class="form-control" value="<%= customer.zip%>"  name="zip">
                        </div>

                        <div class="form-group">
                          <label for="usr">Country:</label>
                          <input type="text" class="form-control" value="<%= customer.country%>"  name="country">
                        </div>

                        <div class="form-group" align="right">
                          <button type="button" class="btn btn-default"><a href="/customerlist">Cancel</a></button>
                        </div>

                        <div class="form-group" align="left">
                          <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--/span-->


        </div>
        <!--/row-->

        <hr>

    </div>
    <!--/.container-->
</body>
</html>