                </div>
                <!--/.well -->
            </div>
            <!--/span-->

            <div class="col-xs-12 col-sm-9">
                <br>
                <div class="jumbotron">
                    <form method="post" ref = 'uploadForm' id = 'uploadForm' encType="multipart/form-data">
                      <table class="table">
                        <thread class = "thread-inverse">
                          <tr>
                            <th>Customer Id</th>
                            <th>Customer Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>City</th>
                            <th>Image</th>
                            <th>Edit</th>
                          </tr>
                          <% for(var i =0; i < customerList.length; i++){ %>
                            <tr>
                              <td><%= customerList[i].personId %></td>
                              <td><%= customerList[i].firstName +" "+customerList[i].lastName %></td>
                              <td><%= customerList[i].email %></td>
                              <td><%= customerList[i].phone %></td>
                              <td><%= customerList[i].address %></td>
                              <td><%= customerList[i].city %></td>
                              <td><%= customerList[i].image %></td>
                              <td><a href="/customeredit/<%= customerList[i].personId %>">Edit</a> | <a href="/customerdelete/<%= customerList[i].personId %>">Delete</a></td>
                            </tr>

                          <% } %>
                        </thread>
                      </table>
                    </form>
                </div>
            </div>
            <!--/span-->


        </div>
