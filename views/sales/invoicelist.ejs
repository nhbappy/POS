                </div>
                <!--/.well -->
            </div>
            <!--/span-->

            <div class="col-xs-12 col-sm-9">
                <br>
                <div class="jumbotron">
                    <form method="post" ref = 'uploadForm' id = 'uploadForm' encType="multipart/form-data">
                      <ul>
                        <%= message %>
                      </ul>

                      <table class="table">
                        <thread class = "thread-inverse">
                          <tr>
                            <th>Invoice Number</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Admin Id</th>
                            <th>Select Invoice</th>
                          </tr>
                          <% for(var i =0; i < invoiceList.length; i++){
                          %>
                            <tr>
                              <td><%= invoiceList[i].invoiceNumber %></td>
                              <td><%= invoiceList[i].date %></td>
                              <td><%= invoiceList[i].time %></td>
                              <td><%= invoiceList[i].adminId %></td>
                              <td><input type="radio" name="invoiceNumber" value="<%= invoiceList[i].invoiceNumber %>"> </td>
                            </tr>

                          <% } %>

                          <div class="form-group" align="left">
                            <button type="submit" class="btn btn-default">Show</button>
                          </div>
						  
                        </thread>
                      </table>
                    </form>
                </div>
            </div>
